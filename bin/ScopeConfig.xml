<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

	<!-- Singleton scope (which is also by default if scope is not provided) -->
	<bean id="reportService" class="com.scope.service.ReportService" scope="singleton">
		<property name="recordsPerPage" value="456"/>
	</bean>
	
	<bean id="reportService1" class="com.scope.service.ReportService" scope="prototype">
		<property name="recordsPerPage" value="456"/>
	</bean>

</beans>